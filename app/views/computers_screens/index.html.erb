<p id="notice"><%= notice %></p>

<h1>Computers Screens</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Resolution</th>
      <th>Size</th>
      <th>Refresh rate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @computers_screens.each do |computers_screen| %>
      <tr>
        <td><%= computers_screen.type %></td>
        <td><%= computers_screen.resolution %></td>
        <td><%= computers_screen.size %></td>
        <td><%= computers_screen.refresh_rate %></td>
        <td><%= computers_screen.description %></td>
        <td><%= link_to 'Show', computers_screen %></td>
        <td><%= link_to 'Edit', edit_computers_screen_path(computers_screen) %></td>
        <td><%= link_to 'Destroy', computers_screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

